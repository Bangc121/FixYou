<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <org.webrtc.SurfaceViewRenderer
        android:id="@+id/BroadCastSurfaceView"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />
    <com.airbnb.lottie.LottieAnimationView
        android:id="@+id/animation_view"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:lottie_autoPlay="true" />
    <LinearLayout
        android:id="@+id/broadcast_name_edit"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:orientation="horizontal">
        <ImageView
            android:layout_width="16dp"
            android:layout_height="16dp"
            android:layout_gravity="center"
            android:src="@drawable/ic_round_live_tv_24px"/>
        <TextView
            android:id="@+id/broadcastName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginLeft="9dp"
            android:text="테스트방송"/>
        <ImageView
            android:layout_width="16dp"
            android:layout_height="16dp"
            android:layout_gravity="center"
            android:layout_marginLeft="3dp"
            android:src="@drawable/ic_round_edit_white_24px"/>
    </LinearLayout>
    <LinearLayout
        android:id="@+id/recyclerview_layout"
        android:layout_width="match_parent"
        android:layout_height="250dp"
        android:background="#48000000"
        android:layout_above="@id/bottom_layout">
        <android.support.v7.widget.RecyclerView
            android:id="@+id/broadcast_chat_recyclerview"
            android:layout_width="match_parent"
            android:layout_height="250dp"
            android:paddingBottom="8dp"
            android:paddingHorizontal="10dp"
            android:paddingTop="14dp"
            tools:ignore="RtlSymmetry,UnusedAttribute" />
    </LinearLayout>
    <RelativeLayout
        android:id="@+id/bottom_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true">
        <FrameLayout
            android:id="@+id/button_layout"
            android:layout_width="match_parent"
            android:layout_height="80dp"
            android:background="#48000000"
            android:visibility="visible">
            <com.kacper.smoothcamerabutton.SmoothCameraButton
                android:id="@+id/cameraButton"
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:layout_gravity="center"/>
            <ImageView
                android:id="@+id/chatButton"
                android:layout_width="35dp"
                android:layout_height="35dp"
                android:src="@drawable/ic_chat_1"
                android:layout_gravity="center|right"
                android:layout_marginRight="20dp"/>
        </FrameLayout>
        <FrameLayout
            android:id="@+id/message_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/textBlack"
            android:visibility="gone">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@color/textBlack"
                android:orientation="horizontal"
                android:padding="3dp">
                <android.support.v7.widget.AppCompatEditText
                    android:id="@+id/broadcast_editText_message"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:layout_gravity="center_vertical"
                    android:layout_marginLeft="8dp"
                    android:background="@color/textBlack"
                    android:hint="채팅 메시지를 입력하세요."
                    android:textColor="@color/textGray"
                    android:textSize="15sp"
                    tools:ignore="HardcodedText" />
                <android.support.v7.widget.AppCompatButton
                    android:id="@+id/broadcast_button_send"
                    style="@style/Base.Widget.AppCompat.Button.Borderless"
                    android:layout_width="40dp"
                    android:layout_height="match_parent"
                    android:layout_gravity="center_vertical"
                    android:background="@color/textBlack"
                    android:text="전송"
                    android:textColor="@color/colorBrown"
                    android:textSize="17sp"
                    android:textStyle="bold" />
            </LinearLayout>
        </FrameLayout>
    </RelativeLayout>
</RelativeLayout>