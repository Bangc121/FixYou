<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.kimjeonghwan.fixyou.CashActivity">
    <ScrollView
        android:id="@+id/cash_form"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:ignore="UselessParent">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="12dp"
            android:orientation="vertical">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="8dp">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="별풍선/아이템 정보"/>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginBottom="15dp">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="17sp"
                    android:text="보유 별풍선"/>
                <TextView
                    android:id="@+id/user_balloon"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="7dp"
                    android:layout_marginRight="3dp"
                    android:textColor="@color/colorMain"
                    android:textSize="17sp"
                    android:text="0"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="17sp"
                    android:text="개"/>
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="8dp">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="별풍선구매하기"/>
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_horizontal"
                android:orientation="vertical">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginVertical="10dp"
                    android:gravity="center_horizontal">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="구매하실 별풍선 개수를 선택하세요."/>
                </LinearLayout>
                <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
                    android:id="@+id/cash_1_button"
                    android:layout_width="330dp"
                    android:layout_height="50dp"
                    android:gravity="center"
                    android:background="@drawable/custom_email_button"
                    android:padding="5dp"
                    android:layout_marginVertical="7dp"
                    android:orientation="horizontal"
                    tools:ignore="UnusedAttribute,UselessParent">
                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="45dp"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:textColor="#ffff"
                        android:textSize="18sp"
                        android:text="@string/cash_1"
                        android:textStyle="bold" />
                </LinearLayout>
                <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
                    android:id="@+id/cash_2_button"
                    android:layout_width="330dp"
                    android:layout_height="50dp"
                    android:gravity="center"
                    android:background="@drawable/custom_email_button"
                    android:padding="5dp"
                    android:layout_marginVertical="7dp"
                    android:orientation="horizontal"
                    tools:ignore="UnusedAttribute,UselessParent">
                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="45dp"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:textColor="#ffff"
                        android:textSize="18sp"
                        android:text="@string/cash_2"
                        android:textStyle="bold" />
                </LinearLayout>
                <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
                    android:id="@+id/cash_3_button"
                    android:layout_width="330dp"
                    android:layout_height="50dp"
                    android:gravity="center"
                    android:background="@drawable/custom_email_button"
                    android:padding="5dp"
                    android:layout_marginVertical="7dp"
                    android:orientation="horizontal"
                    tools:ignore="UnusedAttribute,UselessParent">
                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="45dp"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:textColor="#ffff"
                        android:textSize="18sp"
                        android:text="@string/cash_3"
                        android:textStyle="bold" />
                </LinearLayout>
                <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
                    android:id="@+id/cash_4_button"
                    android:layout_width="330dp"
                    android:layout_height="50dp"
                    android:gravity="center"
                    android:background="@drawable/custom_email_button"
                    android:padding="5dp"
                    android:layout_marginVertical="7dp"
                    android:orientation="horizontal"
                    tools:ignore="UnusedAttribute,UselessParent">
                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="45dp"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:textColor="#ffff"
                        android:textSize="18sp"
                        android:text="@string/cash_4"
                        android:textStyle="bold" />
                </LinearLayout>
                <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
                    android:id="@+id/cash_5_button"
                    android:layout_width="330dp"
                    android:layout_height="50dp"
                    android:gravity="center"
                    android:background="@drawable/custom_email_button"
                    android:padding="5dp"
                    android:layout_marginVertical="7dp"
                    android:orientation="horizontal"
                    tools:ignore="UnusedAttribute,UselessParent">
                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="45dp"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:textColor="#ffff"
                        android:textSize="18sp"
                        android:text="@string/cash_5"
                        android:textStyle="bold" />
                </LinearLayout>
            </LinearLayout>
        </LinearLayout>
    </ScrollView>
</LinearLayout>
