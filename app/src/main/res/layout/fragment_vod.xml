<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.example.kimjeonghwan.fixyou.vod.VodFragment">
    <!-- TODO: Update blank fragment layout -->
    <FrameLayout
        android:id="@+id/refreshVod"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:visibility="gone" >
        <!-- Refresh progress -->
        <ProgressBar
            android:id="@+id/refresh_progress"
            style="?android:attr/progressBarStyleLarge"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="8dp"
            android:layout_gravity="center"/>
    </FrameLayout>
    <android.support.v4.widget.NestedScrollView
        android:id="@+id/scrollviewVod"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="7dp"
            android:descendantFocusability="blocksDescendants"
            android:orientation="vertical"
            tools:ignore="UnusedAttribute">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="5dp"
                android:layout_marginVertical="10dp"
                android:orientation="horizontal">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="16sp"
                    android:textColor="@color/textBlack"
                    android:text="최근 본 VOD"/>
            </LinearLayout>
            <android.support.v7.widget.RecyclerView
                android:id="@+id/vod_recent_recyclerview"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
            </android.support.v7.widget.RecyclerView>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="5dp"
                android:layout_marginVertical="10dp"
                android:orientation="horizontal">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="16sp"
                    android:textColor="@color/textBlack"
                    android:text="주간 베스트 VOD"/>
            </LinearLayout>
            <android.support.v7.widget.RecyclerView
                android:id="@+id/vod_list_recyclerview"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
            </android.support.v7.widget.RecyclerView>
        </LinearLayout>
    </android.support.v4.widget.NestedScrollView>
</LinearLayout>
